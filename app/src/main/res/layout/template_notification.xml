<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space.small">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ir.ugstudio.vampire.views.custom.CustomTextView
                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/zereshki_trans1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="@dimen/space.small"
                android:paddingRight="@dimen/space.small"
                android:textColor="@color/white"
                android:textSize="@dimen/text.size.medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <ir.ugstudio.vampire.views.custom.CustomTextView
                    android:id="@+id/lost_coin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zereshki_trans1"
                    android:textSize="@dimen/text.size.medium" />

                <ir.ugstudio.vampire.views.custom.CustomTextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zereshki"
                    android:textSize="@dimen/text.size.medium"
                    android:textStyle="bold" />

            </LinearLayout>

            <ir.ugstudio.vampire.views.custom.CustomTextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/zereshki"
                android:textSize="@dimen/text.size.medium"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar.size.small"
            android:layout_height="@dimen/avatar.size.small"
            android:layout_gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/space.medium"
        android:layout_marginRight="@dimen/space.medium"
        android:background="@color/zereshki_trans1" />

</LinearLayout>