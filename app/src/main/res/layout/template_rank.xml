<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space.small">

        <ir.ugstudio.vampire.views.custom.CustomTextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:textColor="@color/zereshki"
            android:textSize="@dimen/text.size.3medium" />

        <ir.ugstudio.vampire.views.custom.CustomTextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:textColor="@color/zereshki"
            android:textSize="@dimen/text.size.3medium"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar.size.small"
            android:layout_height="@dimen/avatar.size.small"
            android:adjustViewBounds="true" />

        <ir.ugstudio.vampire.views.custom.CustomTextView
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="@dimen/space.medium"
            android:paddingRight="@dimen/space.medium"
            android:textColor="@color/zereshki"
            android:textSize="@dimen/text.size.3medium"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/space.medium"
        android:layout_marginRight="@dimen/space.medium"
        android:background="@color/zereshki_trans1" />

</LinearLayout>